pipeline {
    agent any

    stages {

        stage('Instalar Dependências (Maven Local)') {
            steps {
                // Esse passo é opcional se o Dockerfile já faz o build, 
                // mas útil para rodar testes unitários antes do docker.
                dir('vittaBackend') {
                    script {
                        sh 'mvn clean install -DskipTests' 
                    }
                }
            }
        }

        stage('Construir Imagem Docker') {
            steps {
                script {
                    def appName = 'vitta-backend'
                    def imageTag = "${appName}:${env.BUILD_ID}" 

                    // REMOVIDO O dir('vittaBackend')
                    // O comando agora roda na raiz, onde o Dockerfile deve estar
                    sh "docker build -t ${imageTag} ."
                }
            }
        }

        stage('Fazer Deploy') {
            steps {
                // Aqui também não precisa necessariamente entrar na pasta, 
                // pois comandos docker stop/run são globais do daemon,
                // mas não faz mal deixar. Vou remover para limpar.
                script {
                    def appName = 'vitta-backend'
                    def imageTag = "${appName}:${env.BUILD_ID}"

                    sh "docker stop ${appName} || exit 0"
                    sh "docker rm -v ${appName} || exit 0"

                    // Adicionei --restart unless-stopped para garantir que suba se o servidor reiniciar
                    sh "docker run -d --restart unless-stopped --name ${appName} -p 8407:8407 ${imageTag}"
                }
            }
        }
    }
    post {
        success {
            echo 'Deploy realizado com sucesso!'
        }
        failure {
            echo 'Houve um erro durante o deploy.'
        }
    }
}