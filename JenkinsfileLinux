pipeline {
    agent any

    environment {
        APP_NAME = 'vitta-app'
        IMAGE_TAG = "${APP_NAME}:${BUILD_ID}"
    }

    stages {
        stage('Verificar Repositório') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], useRemoteConfigs: [[url: 'https://github.com/oj0rel/Vitta_GerenciamentoDeMedicamentos_Backend']]])
            }
        }

        stage('Construir Imagem Full Stack') {
            steps {
                script {
                    echo "Iniciando build do Backend (Java) e Frontend (APK Localmente)..."
                    
                    // Removido o withCredentials e o argumento EXPO_TOKEN
                    // O Dockerfile "Full Power" (com Android SDK) não precisa de token para rodar o ./gradlew
                    sh "docker build -t ${env.IMAGE_TAG} ."
                }
            }
        }

        stage('Deploy / Rodar') {
            steps {
                script {
                    sh "docker stop ${env.APP_NAME} || true"
                    sh "docker rm -v ${env.APP_NAME} || true"

                    // Roda a imagem final
                    sh "docker run -d --name ${env.APP_NAME} -p 8407:8407 ${env.IMAGE_TAG}"
                }
            }
        }
    }
    
    post {
        success {
            echo 'Build completo! Backend rodando e APK gerado localmente dentro do container.'
        }
        failure {
            echo 'Falha no build.'
        }
    }
}